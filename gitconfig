[user]
	name = Jose Ricardo
	email = zehzinho@gmail.com
[color]
  status = auto
  branch = auto
  interactive = auto
	diff = auto
[ui]
  color = auto
[alias]
  pullr = !git pull --rebase
  sn = !git status --short | nl -w 2
  s = !git status --short
  sno = !git status --short -uno
  co = checkout
  ci = commit -v
  cia = commit -v --amend
  rh = reset HEAD
  d = diff --color-words
  dc = diff --cached
  stash-unstaged = stash --keep-index
  wcs = whatchanged --stat
  # From: https://github.com/garybernhardt/dotfiles/blob/master/.gitconfig

  # Fancy logging.
  # h = head
  # hp = head with patch
  # r = recent commits, only current branch
  # ra = recent commits, all reachable refs
  # l = all commits, only current branch
  # la = all commits, all reachable refs
  head = !git l -1
  h = !git head
  hp = "!source ~/.githelpers && show_git_head"
  r = !git l -30
  ra = !git r --all
  l = "!source ~/.githelpers && pretty_git_log"
  la = !git l --all

  spp = "!git stash && git pullr && git stash pop"
[merge]
	tool = vimdiff
[core]
	whitespace = cr-at-eol
	autocrlf = input
[http]
	sslVerify = false
[push]
	default = current
[commit]
  template=~/.git.commit.template
[help]
	autocorrect = 1
[github]
	user = josericardo
